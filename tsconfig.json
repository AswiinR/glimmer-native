{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "declaration": true,
        "declarationDir": "./dist",
        "module": "es6",
        "noImplicitAny": false,
        "outDir": "./dist",
        "target": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "files": ["index.ts"],
    "include": ["src/glimmer/**/*", "src/dom/**/*"],
    "exclude": ["node_modules", "dist"]
}

